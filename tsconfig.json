{
    "compilerOptions": {
      "outDir": "./built",
        // Ensure that .d.ts files are created by tsc, but not .js files
      "declaration": true,
      // Ensure that Babel can safely transpile files in the TypeScript project
      "isolatedModules": true,
      "jsx": "react",
      "esModuleInterop": true,

      "lib": ["es6", "dom"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
    },
    "include": ["./src/**/*"]
}